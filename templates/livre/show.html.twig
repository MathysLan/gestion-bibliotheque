{% extends 'base.html.twig' %}

{% block title %}
    Détails du livre - {{ livre.titre }}
{% endblock %}

{% block body %}
    <div class="container">
        <h1>{{ livre.titre }}</h1>

        <div class="book-details">
            <h2>Détails du livre</h2>

            <div class="book-info">
                <p><strong>Auteur :</strong> {{ livre.auteur.prenom }} {{ livre.auteur.nom }}</p>
                <p><strong>Date de publication :</strong> {{ livre.datePublication|date('d-m-Y') }}</p>
                <p><strong>ISBN :</strong> {{ livre.isbn }}</p>
                <p><strong>Nombre de pages :</strong> {{ livre.nombrePages }}</p>
            </div>

            <div class="book-resume">
                <h3>Résumé</h3>
                <p>{{ livre.resume }}</p>
            </div>


        </div>

        <a href="{{ path('app_liste_livres') }}" class="btn btn-primary">Retour à la liste des livres</a>
    </div>
{% endblock %}
